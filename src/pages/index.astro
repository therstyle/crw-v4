---
import Layout from '../layouts/Layout.astro'
import MainNav from '../components/MainNav.svelte'
import SectionIntro from '../components/SectionIntro.svelte'
import SectionResume from '../components/SectionResume.svelte'
import SectionPortfolio from '../components/SectionPortfolio.svelte'
import SectionContact from '../components/SectionContact.svelte'
import { nav } from './index.data.js'
import { intro } from './index.data.js'
import { portfolio } from './index.data.js'
import { resume } from './index.data.js'
import { contact } from './index.data.js'
---

<Layout>
  <div class="crw-main">
    <div class="crw-main__nav">
      <MainNav {...nav} client:load />
    </div>

    <div class="crw-main__content">
      <SectionIntro {...intro} client:visible />
      <SectionResume {...resume} client:visible />
      <SectionPortfolio {...portfolio} client:visible />
      <SectionContact {...contact} client:visible />
    </div>
  </div>
</Layout>

<style lang="scss">
  @use '../styles/vars';

  .crw-main {
    display: grid;
    grid-template-columns: calc(var(--sidebar-width) + var(--space-1)) 1fr;
    grid-template-areas: 'nav content';

    &__nav {
      grid-area: nav;
    }

    &__content {
      grid-area: content;
      display: flex;
      flex-direction: column;
      gap: var(--space-8);
    }
  }
</style>
